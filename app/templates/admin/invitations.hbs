<h1>Invitations</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |invitation|}}
    <tr>
      <th>{{invitation.id}}</th>
      <td>{{invitation.email}}
      </td>
      <td>
       {{#link-to 'admin.edit-invitation' invitation.id class='btn btn-success'}}Edit{{/link-to}}
          <button class="btn btn-danger btn" {{action 'deleteInvitation' invitation}}>Delete</button>
           </td>
         </tr> 
  {{/each}}
  </tbody>
</table>