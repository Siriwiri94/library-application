<form>
  <div class="form-group row">
    <label for="Email" class="col-sm-2 col-form-label">Email:</label>
    <div class="col-sm-4">
      {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    </div>
  </div>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Message:</label>
    <div class="col-sm-4">
     {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
    </div>
  </div>
      <button class="btn btn-primary" disabled={{isDisabled}} {{action 'sendMessage'}}>Send Message</button> 
      {{#if responseMessage}}
        <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}     
</form>
